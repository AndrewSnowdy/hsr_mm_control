<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="default">
    <plugin filename="ignition-gazebo-physics-system" name="ignition::gazebo::systems::Physics"/>
    <plugin filename="ignition-gazebo-user-commands-system" name="ignition::gazebo::systems::UserCommands"/>
    <plugin filename="ignition-gazebo-scene-broadcaster-system" name="ignition::gazebo::systems::SceneBroadcaster"/>
    <plugin filename="ignition-gazebo-sensors-system" name="ignition::gazebo::systems::Sensors"/>
    <plugin filename="ignition-gazebo-contact-system" name="ignition::gazebo::systems::Contact"/>

    <physics type="ode">
      <real_time_update_rate>333.0</real_time_update_rate>
      <max_step_size>0.003</max_step_size>
      <ode><solver><type>quick</type><iters>100</iters></solver></ode>
    </physics>

    <light name="sun" type="directional">
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision"><geometry><plane><normal>0 0 1</normal><size>20 20</size></plane></geometry></collision>
        <visual name="visual"><geometry><plane><normal>0 0 1</normal><size>20 20</size></plane></geometry>
          <material><ambient>0.8 0.8 0.8 1</ambient><diffuse>0.8 0.8 0.8 1</diffuse></material>
        </visual>
      </link>
    </model>

    <model name="hallway_wall_left">
      <static>true</static>
      <pose>-2.6 4.5 1.0 0 0 0</pose>
      <link name="link">
        <collision name="col"><geometry><box><size>3.1 0.1 2.0</size></box></geometry></collision>
        <visual name="vis"><geometry><box><size>3.1 0.1 2.0</size></box></geometry>
          <material><ambient>0.5 0.5 0.5 1</ambient><diffuse>0.7 0.7 0.7 1</diffuse></material>
        </visual>
      </link>
    </model>

    <model name="hallway_wall_right">
      <static>true</static>
      <pose>1.55 4.5 1.0 0 0 0</pose>
      <link name="link">
        <collision name="col"><geometry><box><size>3.0 0.1 2.0</size></box></geometry></collision>
        <visual name="vis"><geometry><box><size>3.0 0.1 2.0</size></box></geometry>
          <material><ambient>0.5 0.5 0.5 1</ambient><diffuse>0.7 0.7 0.7 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- Door now positioned at X=0 (right side of opening), hinge on right, opens away -->
    <model name="handicap_door">
      <pose>0.0 4.5 1.0 0 0 0</pose>
      
      <link name="door_frame">
        <visual name="v"><geometry><box><size>0.06 0.06 2.0</size></box></geometry></visual>
      </link>

      <link name="door_leaf">
        <inertial><mass>1.0</mass><inertia><ixx>0.1</ixx><iyy>0.1</iyy><izz>0.1</izz></inertia></inertial>
        <!-- Shift collision/visual to -0.5 (negative X) so hinge is on right edge -->
        <collision name="leaf_col"><pose>-0.5 0 0 0 0 0</pose><geometry><box><size>1.0 0.05 2.0</size></box></geometry></collision>
        <visual name="leaf_vis"><pose>-0.5 0 0 0 0 0</pose><geometry><box><size>1.0 0.05 2.0</size></box></geometry>
          <material><ambient>0.6 0.3 0.1 1</ambient><diffuse>0.6 0.3 0.1 1</diffuse></material>
        </visual>
      </link>

      <joint name="door_hinge" type="revolute">
        <parent>door_frame</parent>
        <child>door_leaf</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <!-- Changed: now -1.57 to 0 so it opens in negative rotation (away from robot) -->
            <lower>-1.57</lower>
            <upper>0.0</upper>
            <velocity>0.6</velocity>
            <effort>20</effort>
          </limit>
          <dynamics>
            <damping>5.0</damping>
            <friction>0.1</friction>
          </dynamics>
        </axis>
      </joint>

      <joint name="world_fix" type="fixed"><parent>world</parent><child>door_frame</child></joint>

      <plugin filename="ignition-gazebo-joint-state-publisher-system" name="ignition::gazebo::systems::JointStatePublisher"/>
      <plugin filename="ignition-gazebo-joint-position-controller-system" name="ignition::gazebo::systems::JointPositionController">
        <joint_name>door_hinge</joint_name>
        <topic>/model/handicap_door/door_cmd</topic>
        <p_gain>100</p_gain>
        <i_gain>1</i_gain>
        <d_gain>10</d_gain>
      </plugin>
    </model>

    <!-- Button on right side of doorway, before the door -->
    <model name="ada_button">
      <static>true</static>
      <pose>0.5 4.44 1.0 0 0 0</pose>
      <link name="link">
        <visual name="v"><geometry><box><size>0.15 0.02 0.15</size></box></geometry>
          <material><ambient>0 0 1 1</ambient><diffuse>0 0 1 1</diffuse></material>
        </visual>
        <collision name="button_collision"><geometry><box><size>0.15 0.02 0.15</size></box></geometry></collision>
        <sensor name="button_contact_sensor" type="contact"><contact><collision>button_collision</collision></contact></sensor>
      </link>
      
      <plugin filename="ignition-gazebo-touchplugin-system" name="ignition::gazebo::systems::TouchPlugin">
        <target>hsrb</target>
        <namespace>button_logic</namespace>
        <time>0.01</time>
        <enabled>true</enabled>
      </plugin>
      
    </model>
  </world>
</sdf>